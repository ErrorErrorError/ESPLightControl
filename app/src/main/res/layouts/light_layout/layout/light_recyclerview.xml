<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="device"
            type="com.errorerrorerror.esplightcontrol.devices.Devices" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.errorerrorerror.iosstyleslider.IOSStyleSlider
            android:id="@+id/brightness"
            android:layout_width="155dp"

            android:layout_height="360dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:elevation="?contentElevation"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:issColorBackgroundSlider="?sliderBackground"
            app:issSliderColorDisabled="#C3C3E6"
            app:issCornerRadius="50dp"
            app:issIconSize="50dp"
            app:issIconTint="#E5E5E5"
            app:issIconTintMode="src_in"
            app:issProgress="@{device.brightness}"
            app:issShowIconText="iconText"
            app:issSliderEnabled="@{device.on}"
            app:issText="@{device.brightness +`%`}"
            app:issTextColor="#E5E5E5"
            app:issTextSize="12sp"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/lightOnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@{device.deviceName}"
            android:textSize="20sp" />
    </LinearLayout>
</layout>
