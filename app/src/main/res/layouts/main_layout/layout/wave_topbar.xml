<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rotation="180">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/topPanelWave"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:scaleY="-1"
        app:mwhCloseColor="@color/gradientColorEndWithout75Alpha"
        app:mwhColorAlpha=".75"
        app:mwhGradientAngle="180"
        app:mwhIsRunning="true"
        app:mwhStartColor="@color/gradientColorStartWithout75Alpha"
        app:mwhWaves=" -10,0,1,0.2,90, 90,0,1,0.4,180" />

</LinearLayout>