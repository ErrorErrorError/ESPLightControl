<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tenclouds.swipeablerecyclerviewcell.swipereveal.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-5dp"
        app:dragFromEdge="right"
        app:iconsDistance="12dp"
        app:iconsPadding="12dp"
        app:iconsSize="40dp"
        app:leftIcon="@drawable/ic_microcontroller_icon"
        app:leftIconBgColor="@color/colorAccent"
        app:revealedViewBackground="@android:color/transparent"
        app:revealedViewMarginEnd="20dp"
        app:revealedViewMarginStart="0dp"
        app:rightIcon="@drawable/ic_delete"
        app:rightIconBgColor="@color/redDelete">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewCustomRow"
            style="@style/RecyclerviewItems.CardView"
            android:clickable="false"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:id="@+id/relativeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageViewRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                         android:contentDescription="@string/todo"
                        android:rotation="0"
                        app:srcCompat="@drawable/ic_microcontroller_icon_mini" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deviceNameRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/connectionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/connection"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/ipAddressRecycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="@string/description"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/portName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/port"
                            android:textSize="12sp" />
<!--
                        <TextView
                            android:id="@+id/portNumInputSum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="@string/port"
                            android:textSize="12sp" /> -->
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|end">
                    <com.nightonke.jellytogglebutton.JellyToggleButton
                        android:id="@+id/connectionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:jtbThumbRadius="10dp"
                        app:jtbThumbShadow="true"
                        app:jtbBackgroundRadius="7dp"
                        app:jtbJelly="active_tremble_tail_slim_jim"
                        app:jtbLeftBackgroundColor="@android:color/darker_gray"
                        app:jtbLeftThumbColor="#ECECEC"
                        app:jtbBackgroundMeasureRatioValue="2"
                        app:jtbMoveToSameStateCallListener="true"
                        app:jtbRightBackgroundColor="#D8DCF9"
                        app:jtbEaseType="ease_in_out_bounce"
                        app:jtbRightThumbColor="@color/colorAccent"
                        app:jtbDuration="700"
                        />
                </RelativeLayout>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </com.tenclouds.swipeablerecyclerviewcell.swipereveal.SwipeRevealLayout>


</LinearLayout>