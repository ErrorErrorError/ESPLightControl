<?xml version="1.0" encoding="UTF-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="device"
            type="com.errorerrorerror.esplightcontrol.devices.Devices" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.tenclouds.swipeablerecyclerviewcell.swipereveal.SwipeRevealLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dragFromEdge="right"
            app:iconsDistance="12dp"
            app:iconsPadding="12dp"
            app:iconsSize="40dp"
            app:opened="@{device.open}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@drawable/ic_edit_icon"
            app:leftIconBgColor="?contentColor"
            app:revealedViewBackground="@android:color/transparent"
            app:revealedViewMarginEnd="20dp"
            app:revealedViewMarginStart="20dp"
            app:rightIcon="@drawable/ic_trash_icon"
            app:rightIconBgColor="@color/redDelete">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCustomRow"
                style="@style/RecyclerviewItems.CardView"
                android:clickable="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/imageViewRecycler"
                        android:layout_width="30dp"
                        android:layout_height="86dp"
                        android:layout_marginStart="24dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerInside"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_microcontroller_icon_mini" />

                    <TextView
                        android:id="@+id/deviceNameRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="4dp"
                        android:text="@{device.device}"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@id/connectionStatusRecycler"
                        app:layout_constraintStart_toEndOf="@id/imageViewRecycler" />

                    <TextView
                        android:id="@+id/connectionStatusRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/connection"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ipAddressRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{`Connectivity: ` + device.ip}"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@id/portRecycler"
                        app:layout_constraintStart_toEndOf="@id/imageViewRecycler"
                        app:layout_constraintTop_toBottomOf="@id/deviceNameRecycler" />


                    <TextView
                        android:id="@+id/portRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{`Port: ` + device.port}"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/imageViewRecycler"
                        app:layout_constraintTop_toBottomOf="@id/ipAddressRecycler" />

                    <Switch
                        android:id="@+id/connectionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="86dp"
                        android:checked="@{safeUnbox(device.isOn())}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.555" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="20dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="20dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="20dp" />
                    <!--
                    <com.nightonke.jellytogglebutton.JellyToggleButton
                        android:id="@+id/connectionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{safeUnbox(device.isOn())}"
                        app:jtbBackgroundMeasureRatioValue="2"
                        app:jtbBackgroundRadius="7dp"
                        app:jtbDuration="700"
                        app:jtbEaseType="ease_in_out_bounce"
                        app:jtbJelly="active_tremble_tail_slim_jim"
                        app:jtbLeftBackgroundColor="@android:color/darker_gray"
                        app:jtbLeftThumbColor="#ECECEC"
                        app:jtbRightBackgroundColor="#D8DCF9"
                        app:jtbRightThumbColor="@color/colorAccent"
                        app:jtbThumbRadius="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.917"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.493" /> -->


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </com.tenclouds.swipeablerecyclerviewcell.swipereveal.SwipeRevealLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>