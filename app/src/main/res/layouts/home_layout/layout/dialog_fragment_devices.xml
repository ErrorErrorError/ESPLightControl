<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/somatic_round"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:fontFamily="@font/somatic_round"
            android:text="@string/DeviceName"
            android:textColor="@color/buttonCancelText" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deviceNameTextLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:clipToPadding="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="?contentElevation"
                android:inputType="text"
                android:maxLength="28"
                android:maxLines="1"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ipAddText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="271dp"
                android:fontFamily="@font/somatic_round"
                android:text="@string/IPAddress"
                android:textColor="@color/buttonCancelText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="220dp"
                android:layout_toEndOf="@+id/ipAddText"
                android:fontFamily="@font/somatic_round"
                android:text="@string/Port"
                android:textColor="@color/buttonCancelText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ipAddressTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="160dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/IPAddressInput"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="?contentElevation"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/portTextLayout"
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="210dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@+id/ipAddressTextLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/portInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="?contentElevation"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingBottom="15dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negativeButton"
                style="@style/ButtonShadowColor"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:elevation="0dp"
                android:textColor="@color/buttonCancelText"
                app:backgroundTint="?backgroundHighlight"
                app:strokeColor="?borderInputColor"
                app:strokeWidth=".5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/positiveButton"
                style="@style/ButtonShadowColor"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>
</layout>
