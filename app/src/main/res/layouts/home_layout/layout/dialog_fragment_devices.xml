<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="370dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/somatic_round"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="@string/DeviceName"
            android:fontFamily="@font/somatic_round"
            android:textColor="@color/buttonCancelText"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deviceNameTextLayout"
            android:layout_width="match_parent"
            android:gravity="center|top"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deviceName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:maxLength="28"
                android:elevation="?contentElevation"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:maxLines="1"
                android:textSize="15sp"
                tools:targetApi="p" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/somatic_round"
                android:text="@string/IPAddress"
                android:textColor="@color/buttonCancelText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_weight=".8"
                android:fontFamily="@font/somatic_round"
                android:text="@string/Port"
                android:textColor="@color/buttonCancelText" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ipAddressTextLayout"
                android:layout_width="230dp"
                android:layout_height="75dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/IPAddressInput"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:elevation="?contentElevation"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="15sp"
                    tools:targetApi="p" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/portTextLayout"
                android:layout_width="179dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/portInput"
                    android:layout_width="111dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:elevation="?contentElevation"
                    android:inputType="number"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:maxLength="5"
                    android:textSize="15sp"
                    tools:targetApi="p" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingBottom="15dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negativeButton"
                style="@style/ButtonShadowColor"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:outlineAmbientShadowColor="?backgroundHighlight"
                android:outlineSpotShadowColor="?backgroundHighlight"
                android:textColor="@color/buttonCancelText"
                app:backgroundTint="?backgroundHighlight"
                app:strokeColor="?borderInputColor"
                app:strokeWidth="1dp"
                tools:targetApi="p" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/positiveButton"
                style="@style/ButtonShadowColor"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="35dp"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:textColor="#FFFFFF"
                app:backgroundTint="@color/colorAccent"
                tools:targetApi="p" />

        </RelativeLayout>

    </LinearLayout>
</layout>
