<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/colorBackground</item>
    </style>

    <!-- Dialog -->
    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?colorSurface</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@null</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@null</item>
    </style>

    <!-- InputTextLayout -->
    <style name="Widget.InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputEditText.Theme</item>
        <item name="errorTextColor">?colorError</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="boxBackgroundColor">?colorOnBackground</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="TextInputEditText.Theme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/TextInputEditText.Style</item>
    </style>

    <style name="TextInputEditText.Style" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:elevation">5dp</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppShapeAppearance.LargeComponent</item>
    </style>

</resources>
