<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.LightMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowColorLight</item>
        <item name="materialCardViewStyle">@color/windowColorLight</item>
        <item name="baseBackgroundColor">@color/windowColorLight</item>
        <item name="contentColor">@color/contentColorLight</item>
        <item name="contentElevation">0dp</item>
        <item name="textColorInverse">?android:attr/textColorPrimaryInverse</item>
        <item name="colorHighlight">@color/contentHightlightLight</item>
    </style>

    <style name="AppTheme.DarkMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowColorDark</item>
        <item name="materialCardViewStyle">@color/windowColorDark</item>
        <item name="baseBackgroundColor">@color/windowColorDark</item>
        <item name="contentColor">@color/contentColorDark</item>
        <item name="contentElevation">0dp</item>
        <item name="textColorInverse">?android:attr/textColorSecondaryInverse</item>
        <item name="colorHighlight">@color/contentColorDark</item>

    </style>

    <style name="Custom.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">.5dp</item>
        <item name="boxBackgroundColor">?contentColor</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorTextColor">@color/redDelete</item>
    </style>

    <style name="Custom.MaterialCardView" parent="Base.CardView">
        <item name="cardElevation">?contentElevation</item>
        <item name="cardCornerRadius">38dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">?contentColor</item>
    </style>

    <style name="RecyclerviewItems.CardView" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">?contentElevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">411dp</item>
        <item name="android:backgroundTint">?contentColor</item>
    </style>

</resources>
